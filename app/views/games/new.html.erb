<div class="container">
  <h1>New game</h1>

    <% @letters.each do |letter| %>
      <%= letter %>
    <% end %>

  <p class="form-prefix">What is the longest word you can find?</p>

  <form action="/score" method="post" data-turbo="false">
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word">
      <button class="btn btn-light" type="submit">Play!</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
